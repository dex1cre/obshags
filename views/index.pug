extends layout
block index
	.container 
		h2 Быстрый заказ любого товара
	.container(style="margin-top: 20px;")
		.row
			.col-md-6.col-sm-6
				.left-form
					h3(style="margin-bottom: 20px;") Введите данные
					.form-group
						label(for="variable_of_t") Вид товара:
						select(name="variable_of_t[]" id="variable_of_t" ng-model="tovar").form-control
							option(value="Формат А3") Формат А3
							option(value="Формат А4") Формат А4
					.form-group
						label(for="count_of_t") Количество:
						input(type="text" name="count_of_t" id="count_of_t" placeholder="Вот сюда исключительно число!" ng-model="tovar_count").form-control
					.form-group
						label(for="number_of_home") Номер общежития:
						select(name="number_of_home[]" id="number_of_home" ng-model="number_of_home").form-control
							option(value="1") 1
							option(value="2") 2
							option(value="3") 3
							option(value="4") 4
							option(value="5") 5
							option(value="6") 6
							option(value="7") 7
							option(value="8") 8
							option(value="9") 9
					.form-group
						label(for="id_of_vk") Страница в VK(id):
						input(type="text" name="id_of_vk" id="id_of_vk" placeholder="А вот сюда исключительно id!" ng-model="id_of_vk").form-control
					.form-group
						button.f1-ready.btn.btn-primary Готово!

			.col-md-6.col-sm-6
				.right-form
					h3 Итог:
					ul.ready-form
						li Товар:
							span.tovar2.
								{{tovar}}
						li Количество:
							span.count2.
								{{tovar_count}}
						li Номер общежития:
							span.number2.
								{{number_of_home}}
						li id страницы VK:
							span.id_vk2.
								{{id_of_vk}}
					.from-group
						button.ready-to-send.btn.btn-success(style="margin: 0 auto; display: none;") Отправить!